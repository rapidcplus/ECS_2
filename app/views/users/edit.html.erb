<% content_for(:title, t('users.edit.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('users.edit.title') %></h1>
      <%= form_with(model: @user, url: user_path(@user), method: :patch) do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :message_template %>
          <%= form.text_area :message_template, class: 'form-control' %>
        </div>
        <%= form.submit t('helpers.submit.update'), class: 'btn btn-success float-right' %>
      <% end %>
      
    </div>
  </div>
</div>
