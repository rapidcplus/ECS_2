<% content_for(:title, t('users.edit_password.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('users.edit_password.title') %></h1>
      <%= form_with(model: @user_password, url: update_password_user_path(@user), method: :patch) do |form| %>
        <div class="form-group">
          <%= form.label t('users.edit_password.password') %>
          <%= form.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label t('users.edit_password.password_confirmation') %>
          <%= form.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <%= form.submit t('helpers.submit.update'), class: 'btn btn-success float-right' %>
      <% end %>
    </div>
  </div>
</div>
